#!/usr/bin/env node
'use strict';

/******************
 *  Dependencies  *
 ******************/

var program = require('commander');
var ehonda = require('../src/ehonda-cli');
var path = require('path');

/***********
 *  Paths  *
 ***********/

var CWD = process.cwd();

/*************
 *  Program  *
 *************/

program
    .version('0.0.1');

/***********
 *  Build  *
 ***********/

program.command('build [name]')
    .action(function(name) {
        ehonda.build(name);
    });

/*************
 *  Parsing  *
 *************/

program.parse(process.argv);
