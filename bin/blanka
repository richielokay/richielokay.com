#!/usr/bin/env node
'use strict';

/******************
 *  Dependencies  *
 ******************/

var program = require('commander');
var blanka = require('../src/blanka-cli');

/*************
 *  Program  *
 *************/

program
    .version('0.0.3');

/***********
 *  Build  *
 ***********/

program.command('build [name]')
    .action(function(name) {
        blanka.build(name);
    });

program.command('init')
    .action(function() {
        blanka.init();
    });

/*************
 *  Parsing  *
 *************/

program.parse(process.argv);
